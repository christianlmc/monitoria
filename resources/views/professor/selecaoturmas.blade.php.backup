<script type="text/javascript">
var selecionados = new Array();

$(document).ready(function(){
	$('#monitores').multiSelect({
		selectableHeader: "<div> Dispon√≠veis </div>",
		selectionHeader: "<div> Selecionados </div>",
		keepOrder: true,

		afterSelect: function(values)
		{
			selecionados.push(values[0]);
			$("#monitores_selecionados").val(selecionados);
		},
		afterDeselect: function(values)
		{
			index = selecionados.indexOf(values[0]);
			selecionados.splice(index,1);
			$("#monitores_selecionados").val(selecionados);
		},
	});

});
</script>
    
